{
  "manifest_version": 3,
  "name": "chat-yt",
  "version": "0.1.0",
  "description": "Chat with youtube video",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "chat-yt"
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["src/content/content.tsx"]
    }
  ]
}
